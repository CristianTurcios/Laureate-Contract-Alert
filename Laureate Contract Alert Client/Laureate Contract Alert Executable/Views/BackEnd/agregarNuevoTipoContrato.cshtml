<!-- Inicio de codigo del formulario -->
  <div class="container">
    <br><br><br><br><br>
       @{
        string mensaje = "";
        int nivelmensaje = 0;
          
        if(ViewData["Mensaje"] != null &&  ViewData["NivelMensaje"] !=null)
        {
            mensaje = (string)ViewData["Mensaje"];
            nivelmensaje = (int)ViewData["NivelMensaje"];                   
        }
           
        if (nivelmensaje == 2)
        {
           <script>swal({
           title: "Good job!",
           text: "Added Contract Type Correctly!",
           type: "success",
           timer: 5000
           })
           </script>                                                                                                         
        }
        else
          if (nivelmensaje == 3)
          {
            <script>swal({
            title: "Oops...",
            text: "Error in inserting!",
            type: "error",
            timer: 5000
             })
             </script>          
          }                      
       }

      <div class="row">
        <div class="col s10">

<!-- Codigo que mostrata el boton de navegacion para regresar a la pantalla principal-->
          <div class="row">
